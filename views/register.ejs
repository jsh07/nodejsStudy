<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/main.css" rel="stylesheet">
</head>

<body>
    <%- include('nav.ejs') %>

        <form class="form-box form-register" action="/register" method="POST">
            <h4>회원가입</h4>
            <div class="mb-3">
                <label for="inputId" class="form-label">아이디</label>
                <input type="text" class="form-control" id="inputId" name="username">
            </div>
            <div class="mb-3">
                <label for="inputPw" class="form-label">비밀번호</label>
                <input type="text" class="form-control" id="inputPw" name="password">
            </div>
            <div class="mb-3">
                <label for="inputPw2" class="form-label">비밀번호 확인</label>
                <input type="text" class="form-control" id="inputPw2" aria-describedby="pwHelp" name="password2">
                <div id="pwHelp" class="form-text"></div>
            </div>
            <button type="submit" class="btn btn-primary btn-register">회원가입하기</button>
        </form>

        <script>
            let id = document.querySelector('#inputId');
            let pw1 = document.querySelector('#inputPw');
            let pw2 = document.querySelector('#inputPw2');
            let pwMsg = document.querySelector('#pwHelp');
            let isEqual = false;
            
            pw2.addEventListener('input', (e) =>{
                if (pw1.value == e.target.value) {
                    pwMsg.innerHTML = '비밀번호 일치';
                    isEqual = true;
                } else {
                    pwMsg.innerHTML = '비밀번호 일치하지 않음';
                    isEqual = false;
                }
            });
            
            pw1.addEventListener('input', (e) =>{
                if (pw2.value == e.target.value) {
                    pwMsg.innerHTML = '비밀번호 일치';
                    isEqual = true;
                } else {
                    pwMsg.innerHTML = '비밀번호 일치하지 않음';
                    isEqual = false;
                }
            });

            document.querySelectorAll('.form-register')[0].addEventListener('submit', function(e) {
                if (!isEqual) {
                    alert('비밀번호 확인란이 일치하지 않습니다.');
                    e.preventDefault();
                }
                
                if (id.value == '') {
                    alert('아이디를 입력해주세요.');
                    e.preventDefault();
                }
                
                if (pw1.value == '') {
                    alert('비밀번호를 입력해주세요.');
                    e.preventDefault();
                }
                if (pw2.value == '') {
                    alert('비밀번호를 다시 한 번 확인해주세요.');
                    e.preventDefault();
                }
            });

            
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</body>

</html>